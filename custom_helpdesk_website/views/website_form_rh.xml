    <record model="website.page" id="ticket_thanksss">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/ticket-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">custom_helpdesk_website.ticket_thanksss</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="custom_helpdesk_website.ticket_thanksss">
                <div id="wrap" style="margin-left:500px; margin-top:200px;">
                    <div class="container">
                        <h1>Thanks !</h1>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="alert alert-success" role="status">
                                    Votre demande est bien prise en compte
                                    vous pouvez la suivre via les notifications email ou dans mon compte => Ticket RH

                                </div>
                            </div>
                            <br/>
                            <div class="clearfix oe_login_buttons">
                                <button class="btn btn-primary pull-left"><a class="btn btn-primary" href="/ticket_webform_rh">Retourner</a></button>
                                <!--<a class="btn btn-primary" href="/ticket_webform">Go to My Page</a>-->
                            </div>
                        </div>
                    </div>

                </div>
            </t>
        </field>
