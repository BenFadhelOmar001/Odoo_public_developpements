<odoo>
    <data>
<template id="tickets_reponse" name="Helpdesk Tickets Reponses">
        <t t-call="portal.portal_layout">
            <!--<t t-set="wrapwrap_classes" t-value="'o_portal_bg_dark'"/>-->

            <t t-set="o_portal_fullwidth_alert" groups="helpdesk.group_helpdesk_user">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=helpdesk.ticket&amp;id=%s&amp;view_type=form' % (ticket.id)"/>
                </t>
            </t>






                   <!-- <div class="o_portal_messages_container mt32" id="ticket_chat" data-anchor="true">
                        <h4><strong>Message and communication history</strong></h4>
                        <t t-call="portal.message_thread">
                            <t t-set="token" t-value="ticket.access_token"/>
                            <t t-set="disable_composer" t-value="ticket.stage_id.fold"/>
                        </t>
                    </div>-->
                    <br/><br/><br/><br/>
                    <div class="form_group my-element" >
                        <form role="form" action="/reponse/ticket" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="form-group">
                            <input type="text" name="id" style="display:none" t-att-value="ticket.id"/>
                            <h4 style="margin-left:400px"><strong>Merci d'écrivez votre Réponse </strong></h4>
                        <br/>
                    <textarea name="mail" placeholder="Ecrire réponse" cols="100" rows="12" style="margin-left:200px" required="1"></textarea>
                        </div>

                        <br/>

                            <div class="clearfix oe_login_buttons" style="margin-left:550px">
                                <button type="submit" class="btn btn-primary pull-left" id="toggle-button" >Envoyer</button>
                            </div>
                        </form>


                    </div>



        </t>

    </template>

        <record model="website.page" id="ticket_thanks_response">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/ticket-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">custom_helpdesk_website.ticket_thanks_response</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="custom_helpdesk_website.ticket_thanks_response">
                <div id="wrap" style="margin-left:500px; margin-top:200px;">
                    <div class="container">
                        <h1>Thanks !</h1>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="alert alert-success" role="status">
                                    Votre message est bien sauvegardé

                                </div>
                            </div>
                            <br/>

                        </div>
                    </div>

                </div>
            </t>
        </field>
    </record>


    </data>
</odoo>