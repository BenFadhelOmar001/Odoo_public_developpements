<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>







         <record id="mrp_production_form_inherit" model="ir.ui.view">
        <field name="name">mrp.production.view.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">

                    <field name="ref_bom" string="Référence nomenclature"/>


            </xpath>
        </field>
         </record>

        <record id="mrp_production_tree_inherit" model="ir.ui.view">
        <field name="name">mrp.production.view.tree.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">

                    <field name="ref_bom" string="Référence nomenclature"/>


            </xpath>
        </field>
         </record>

        <record id="ref_search_view" model="ir.ui.view">

            <field name="name">ref.search.view</field>

            <field name="model">mrp.production</field>

            <field name="arch" type="xml">

                <search string="Référence nomenclature">
                    <group expand="1" string="Group by">
                        <filter name="group_mrp" string="Mrp" icon="terp-partner"
                                context="{'group_by':'ref_bom'}"/>


                    </group>


                </search>

            </field>

        </record>

         <record id="mrp.mrp_production_action" model="ir.actions.act_window">
            <field name="context">{'search_default_group_mrp' : 1}</field>
        </record>



    </data>
</odoo>
