
<odoo>
    <data>
        <record id='split_mo_wizard_view_form' model='ir.ui.view'>
            <field name="name">split_mo_wizard_view_form</field>
            <field name="model">split.mo.wizard</field>
            <field name="arch" type="xml">
                <form string="Déviser l'ordre de fabrication">
                    <!-- Instructions for the user -->
                    <p>Choisissez comment diviser l'ordre de fabrication en fonction du numéro ou de la quantité de division.</p>
                    <!-- Input fields group -->
                    <group col="4">
                        <field name="split_mo_by" string="Diviser par"/>
                        <field name="split_mo_no" string="Nombre/Quantité"/>
                    </group>
                    <!-- Footer with action buttons -->
                    <footer>
                        <!-- Button to trigger the 'btn_split' method -->
                        <button name="btn_split" type="object" string="Diviser" class="btn-primary"/>
                        <!-- Button to cancel and close the wizard -->
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>