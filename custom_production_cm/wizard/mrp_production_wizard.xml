<odoo>
    <data>
        <record id="view_form_mrp_production_wizard" model="ir.ui.view">
            <field name="name">view_form_mrp_production_wizard</field>
            <field name="model">mrp.production.wizard</field>
            <field name="arch" type="xml">
                <form string="Ordre de fabrication Centrale Meuble">
                    <h3>Ordre de fabrication Centrale Meuble
                    </h3>
                    <br/>
                    <group>
                        <field name="employee_id" string="Employé"/>
                        <field name="production_id" invisible="1"/>

                    </group>
                    <footer>
                        <button string="imprimer" type="object" name="create_mrp_custom_report" class="btn-primary"/>
                        <button string="annuler" type="object" special="cancel" class="btn btn-secondary"/>
                    </footer>
                </form>

            </field>
        </record>

        <record id="action_mrp_production_wizard_custom" model="ir.actions.act_window">
            <field name="name">Ordre de fabrication par employé</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.production.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_mrp_production_wizard"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="mrp.model_mrp_production"/>
            <field name="binding_view_types">form</field>
        </record>

        <!--<record id="action_txt_wwwiz_action" model="ir.actions.act_window">
