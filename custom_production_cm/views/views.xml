<odoo>
  <data>
      <record id="mrp_production_inherit_view" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='date_planned_start']" position="attributes">

                    <attribute name="for">date_planned_start_custom</attribute>
                </xpath>
                <xpath expr="//field[@name='date_planned_start']" position="attributes">

                    <attribute name="invisible">1</attribute>
                </xpath>

              <xpath expr="//field[@name='date_planned_start']" position="after">

                    <field name="date_planned_start_custom" />
                </xpath>

            </field>
        </record>

      <record id="mrp_routing_workcenter_inherit_form_editable_view" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.form.editable</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
            <field name="arch" type="xml">

              <xpath expr="//field[@name='company_id']" position="after">

                  <field name="sequence_center" string="Séquence" />

              </xpath>

            </field>
        </record>

      <record id="mrp_routing_workcenter_inherit_tree_editable_view" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.tree.editable</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_bom_tree_view"/>
            <field name="arch" type="xml">

              <xpath expr="//field[@name='name']" position="before">

                  <field name="sequence_center" string="Séquence" />

              </xpath>

            </field>
        </record>

      <record id="mrp_workorder_inherit_tree_view" model="ir.ui.view">
            <field name="name">mrp_workorder.tree.inherit</field>
            <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="custom_work_order.workorder_production_inherit_tree_view"/>
            <field name="arch" type="xml">

              <xpath expr="//field[@name='name']" position="before">

                  <field name="sequence" string="Séquence" />

                  <field name="demarage_action" invisible="1"/>

              </xpath>
                <xpath expr="//field[@name='state']" position="before">

                  <field name="remarque_id" string="Remarque" options="{'no_create': True, 'no_create_edit':True}"/>

              </xpath>




                <xpath expr="//button[@name='button_start']" position="replace">

                <!--<button name="button_start" type="object" string="Démarrer" class="btn-success" attrs="{'invisible': ['|', '|', '|', '|', ('production_state','in', ('draft', 'done', 'cancel')), ('working_state', '=', 'blocked'), ('state', '=', 'done'), ('is_user_working', '!=', False), ('demarage_action', '=', False)]}"/>-->

                </xpath>
                 <xpath expr="//button[@name='button_pending']" position="replace">
                </xpath>
                <xpath expr="//button[@name='button_finish']" position="replace">
                </xpath>
                <xpath expr="//button[@name='button_unblock']" position="replace">
                </xpath>
                <xpath expr="//button[@name='action_open_wizard']" position="replace">
                </xpath>
                <xpath expr="//button[@name='412']" position="replace">
                </xpath>
                <xpath expr="//field[@name='date_start']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//field[@name='date_start']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='date_finished']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//field[@name='date_finished']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>


            </field>
        </record>

      <record id="view_remarque_remarque_tree" model="ir.ui.view">
            <field name="name">Remarques Ordres de travail</field>
            <field name="model">remarque.remarque</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Remarque"/>
                </tree>
            </field>
        </record>

        <record id="menu_remarque_remarque_action" model="ir.actions.act_window">
            <field name="name">Remarques Ordres travail</field>
            <field name="res_model">remarque.remarque</field>

            <field name="view_mode">tree,form</field>
        </record>
      <menuitem
            id="menu_remarque_remarque"
            name="Remarques Ordres travail"
            action="menu_remarque_remarque_action"
            parent="mrp.menu_mrp_configuration"
            sequence="4"/>
  </data>
</odoo>